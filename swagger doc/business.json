{
  "openapi": "3.0.0",
  "info": {
    "title": "Business API",
    "version": "1.0.0",
    "description": "API endpoints for managing businesses"
  },
  "paths": {
    "/business": {
      "get": {
        "summary": "Get all businesses with pagination and search",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "q", "in": "query", "schema": { "type": "string" }, "description": "Search term by business name" }
        ],
        "responses": {
          "200": {
            "description": "Businesses retrieved successfully",
            "content": {
              "application/json": {
                "example": [
                  { "ID": 1, "OwnerName": "John Doe", "BusinessName": "Tech Store", "BusinessEmail": "tech@store.com", "isVerified": 1 },
                  { "ID": 2, "OwnerName": "Jane Smith", "BusinessName": "Fashion Hub", "BusinessEmail": "fashion@hub.com", "isVerified": 0 }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new business",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "OwnerName": { "type": "string" },
                  "BusinessName": { "type": "string" },
                  "BusinessEmail": { "type": "string" },
                  "BusinessPhoneNo": { "type": "string" },
                  "PersonalPhoneNo": { "type": "string" },
                  "GSTNumber": { "type": "string" },
                  "BusinessDocs": { "type": "string" },
                  "BusinessAddress": { "type": "string" },
                  "BusinessFrontImage": { "type": "string" }
                },
                "required": ["OwnerName", "BusinessName", "BusinessEmail"]
              },
              "example": {
                "OwnerName": "John Doe",
                "BusinessName": "Tech Store",
                "BusinessEmail": "tech@store.com",
                "BusinessPhoneNo": "1234567890",
                "PersonalPhoneNo": "0987654321",
                "GSTNumber": "GST123456",
                "BusinessDocs": "doc1.pdf",
                "BusinessAddress": "123 Tech Street",
                "BusinessFrontImage": "front.jpg"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Business created successfully" }
        }
      }
    },
    "/business/unverified": {
      "get": {
        "summary": "Get all unverified businesses with pagination and search",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "q", "in": "query", "schema": { "type": "string" }, "description": "Search term by business name" }
        ],
        "responses": {
          "200": {
            "description": "Unverified businesses retrieved successfully",
            "content": {
              "application/json": {
                "example": [
                  { "ID": 2, "OwnerName": "Jane Smith", "BusinessName": "Fashion Hub", "BusinessEmail": "fashion@hub.com", "isVerified": 0 }
                ]
              }
            }
          }
        }
      }
    },
    "/business/{id}": {
      "get": {
        "summary": "Get business by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Business retrieved successfully" },
          "404": { "description": "Business not found" }
        }
      },
      "put": {
        "summary": "Update business by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "example": { "BusinessName": "Updated Tech Store" } } } },
        "responses": { "200": { "description": "Business updated successfully" } }
      },
      "delete": {
        "summary": "Delete business by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Business deleted successfully" } }
      }
    }
  }
}
