{
  "openapi": "3.0.0",
  "info": {
    "title": "Category API",
    "version": "1.0.0",
    "description": "API endpoints for managing categories and subcategories"
  },
  "paths": {
    "/category": {
      "get": {
        "summary": "Get top-level categories with pagination & search",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "q", "in": "query", "schema": { "type": "string" }, "description": "Search by category name" }
        ],
        "responses": {
          "200": {
            "description": "Categories retrieved successfully",
            "content": {
              "application/json": {
                "example": [
                  { "ID": 1, "Name": "Clothing", "Parent_ID": null, "Status": "active" },
                  { "ID": 2, "Name": "Electronics", "Parent_ID": null, "Status": "active" }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a category or subcategory",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "image": { "type": "string" },
                  "icon": { "type": "string" },
                  "parentId": { "type": "integer", "nullable": true },
                  "status": { "type": "string", "enum": ["active","inactive"], "default": "active" }
                },
                "required": ["name"]
              },
              "example": {
                "name": "Men's Wear",
                "image": "mens.jpg",
                "icon": "icon.png",
                "parentId": 1,
                "status": "active"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Category created successfully" }
        }
      }
    },
    "/category/{parentId}/subcategories": {
      "get": {
        "summary": "Get subcategories by parent ID",
        "parameters": [
          { "name": "parentId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Subcategories retrieved successfully",
            "content": {
              "application/json": {
                "example": [
                  { "ID": 3, "Name": "Shirts", "Parent_ID": 1, "Status": "active" },
                  { "ID": 4, "Name": "Pants", "Parent_ID": 1, "Status": "active" }
                ]
              }
            }
          }
        }
      }
    },
    "/category/{id}": {
      "delete": {
        "summary": "Delete category safely",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Category deletion response",
            "content": {
              "application/json": {
                "example": { "success": false, "message": "Cannot delete category: it has subcategories." }
              }
            }
          }
        }
      }
    }
  }
}
